@page
@model websiteTest.Pages.BuyModel
@{
}

@* <h1>Handla</h1> *@

<div class="shop-input">
    <form method="post">
        <input type="text"
               asp-for="NewItems"
               placeholder="Enter item..."
               class="input-field" />
   
        <button type="submit" class="add-button">
            <span>A d d T o L i s t</span>
        </button>
    </form>
</div>
    



@if (BuyModel.ItemsList.Any())
{
    <ul class="shopping-list">
        @for (int i = 0; i < BuyModel.ItemsList.Count; i++)
        {
            <li>
                @BuyModel.ItemsList[i]

                <form method="post" asp-page-handler="Remove" style="display:inline">
                    <input type="hidden" name="index" value="@i" />
                    <button type="submit" class="remove-button">X</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No items yet.</p>
}
<div class="bottom-bar">
    <a href="/" class="add-button back-button">
        <span>B A C K</span>
    </a>
</div>